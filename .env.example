# =============================================================================
# fin-risk-engine Environment Variables
# Copy this file to .env and fill in your values.
# .env is gitignored â€” never commit real secrets.
# =============================================================================

# --- Application ---
APP_ENV=development           # development | staging | production
LOG_LEVEL=INFO                # DEBUG | INFO | WARNING | ERROR
LOG_JSON=false                # true for production (structured JSON logs)

# --- Model Serving ---
MODEL_DIR=outputs/models      # or s3://your-bucket/models/v1 for cloud serving
API_KEY=                      # Set to enable API key auth on /score endpoints

# --- Experiment Tracking (WS3) ---
MLFLOW_TRACKING_URI=          # e.g. http://localhost:5000 or sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=fin-risk-engine

# --- Streaming (WS5) ---
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TRANSACTIONS_TOPIC=transactions
KAFKA_SCORES_TOPIC=fraud_scores

# --- Feature Store (WS5) ---
REDIS_URL=redis://localhost:6379/0

# --- AWS (WS4) ---
AWS_REGION=us-east-1
AWS_S3_BUCKET=fin-risk-models
ECR_REGISTRY=
ECS_CLUSTER=
